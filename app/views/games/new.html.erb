<h1 class="mt-5 mb-3">New game</h1>

<div class="d-flex mb-3">
  <% @letters.each do |letter| %>
  <p class="border me-2 letter-squared bg-primary text-white fw-bold"><%= letter %></p>
  <% end %>
</div>

<p>What is the longest word you can find?</p>

<form action="/score" method="POST" data-turbo="false">
  <%= hidden_field_tag 'letters', @letters %>
  <div class="btn-group">
    <input type="text" name="word">
    <input type="submit" value="Play">
  </div>

  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>
